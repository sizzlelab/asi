<h1><code>/session</code></h1>

<p>
  A resource for logging in and out.
</p>

<% methods = [ { :name => "POST", 

                 :description => "Starts a new session. If no username and password are provided,
                                  a session is started only for the client.", 

                 :parameters => [ { :client_name => "The client's name." },
                                  { :client_password => "The client's password." },
                                  { :username => "The user's name (optional)." },
                                  { :password => "The user's password (optional)." } ],
                 :returns => { "201" => "Ok.",
                               "401" => "Erroneous or missing authentication token(s).",
                               "409" => "A session already exists." }  },

               { :name => "DELETE", 
                 :description => "Ends the current session.",
                 :returns => { "200" => "Ok.", 
                               "404" => "There is no session." } } ] %>

<%= render :partial => "doc/methods", :locals => { :methods => methods } %>

