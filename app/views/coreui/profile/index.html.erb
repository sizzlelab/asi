<% if @person %>
  <h2>Welcome, <%= @person.name_or_username %>!</h2>

  <p>Here you can view and edit the information in your OtaSizzle profile.</p>

  <div class="profile_box" id="<%= @person.id %>">
    <div class="avatar">
      <%= link_to (image_tag("/people/#{@person.guid}/@avatar/small_thumbnail", :align => :left, :alt => "Show full profile"), coreui_profile_path(:id => @person.id)) if @person.avatar %>
    </div>
    <div class="info">
      <p class="name">
        <%= link_to @person.name ? @person.name.unstructured : @person.username, coreui_profile_path(:id => @person.id) %>
      </p>
      <p class="links">
        <%= link_to "Edit your profile", edit_coreui_profile_path(:id => @person.id) %><br />
        <%= link_to "Edit your privacy settings", edit_coreui_privacy_path(:id => @person.id) %>
      </p>
    </div>
    <div class="box_footer"></div>
  </div>
<% else %>
<p>Please use your OtaSizzle username and password to login.</p>

<%= form_tag('/session', :action => "create") %>
        <%= hidden_field_tag "session[app_name]", COREUI_APP_NAME %>
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <label>Username</label>
        <%= text_field_tag "session[username]" %>
        <label>Password</label>
        <%= password_field_tag "session[password]" %>
        <%= submit_tag "Login" %>
</form>

<% end %>
