<h3><%= name %></h3>
<div class="method">
<p>
  <%= description %>
</p>


<% if parameters && parameters.size > 0 %>
<h4>Parameters</h4>
  <table>
  <% parameters.each do |parameter| %>
    <tr><th><%= parameter.to_a[0][0] %></th><td>
      <% if parameter.to_a[0][1].class == Array%>
      <%= render :partial => "doc/inner_parameters", :locals => { :parameters => parameter.to_a[0][1] } %>
      <%else%>
        <%= parameter.to_a[0][1]%>
      <%end%>
      
    </td></tr>
  <% end %>
  </table>
<% end %>
</div>

